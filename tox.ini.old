
[tox]
envlist = py36,py37,py38,py39
skip_missing_interpreters = true
minversion = 3.20.1
requires =
    setuptools >= 44.0.0
    wheel >= 0.34.2
    twine >= 3.2.0

[flake8]
ignore = E402,W503,E231
max-line-length = 120
max-complexity = 10

[gh-actions]
python =
    3.6: py36
    3.7: py37
    3.8: checklint, py38
    3.9: py39

[testenv:lint]
basepython = python3
sitepackages = false
skip_install = false
deps =
    flake8
    black
commands =
    black .
    flake8 --exclude ".tox/ venv/"

[testenv:coverage]
basepython = python3
deps =
    pytest
    pytest-cov
commands =
    pytest --cov=opslib.osm --cov-report=term-missing --cov-report=html:coverage --cov-branch

[testenv]
sitepackages = false
deps = typing_inspect
commands =
    python --version
    python -m unittest -v {posargs:-v tests/test_osmlib.py}